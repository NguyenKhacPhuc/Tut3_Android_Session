<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_marginTop="-100dp"/>
    <RelativeLayout
        android:id="@+id/bubble_chat"
        android:background="@drawable/icon_shape_header_sign_in"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:elevation="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chat_bubble"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello again"
        android:layout_below="@+id/bubble_chat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:text="Welcome Back."
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/email_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_below="@+id/welcome"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_lable"
        android:layout_marginLeft="20dp"
        android:hint="Enter your email"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/password_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_input"
        android:text="Password"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <RelativeLayout
        android:id="@+id/password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_lable">
    <EditText
        android:id="@+id/password_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:background="@null"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
       />

        <Button
            android:id="@+id/forgot_pass"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/password_input"
            android:gravity="center_vertical"
            android:text="Forgot password"
            android:textAllCaps="false"
            android:textSize="15sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/password_input"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/Log_in_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sign_in_shape"
        android:layout_below="@id/password_field"
        android:textColorHint="#FFF"
        android:hint="Sign in"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        style="?android:attr/borderlessButtonStyle"
        />
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to friendly desi?"
        android:layout_below="@id/Log_in_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/login_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="left"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/question"
        android:layout_below="@+id/Log_in_btn"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"/>
</RelativeLayout>